<h1><%= @list.name %></h1>
<% @bookmarks.each do |bookmark| %>
  <p><%= bookmark.comment %></p>
  <p><%= bookmark.movie.title %></p>
  <%= link_to "Delete bookmark", bookmark_path(bookmark), data: {
    turbo_method: :delete, turbo_confirm: "Kek"
  } %>
<% end %>





<%= link_to "Edit this list", edit_list_path(@list) %>
<%= link_to "Delete this list", list_path(@list), data: {
  turbo_method: :delete, turbo_confirm: "Are you sure ?"
} %>
<%= link_to "Create a bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Go back to Lists", root_path %>
